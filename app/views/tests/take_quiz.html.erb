<h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @test.title %></h1>

<%= form_with url: submit_quiz_test_path(@test), method: :post, local: true do |form| %>
  <% @test.questions.each_with_index do |question, index| %>
    <div class="mb-4 p-4 bg-white shadow-md rounded">
      <p class="font-bold text-lg"><%= "#{index + 1}. #{question.content}" %></p>
      <% question.answer_options.each_with_index do |option, i| %>
        <div class="mb-2">
          <label>
            <%= radio_button_tag "answers[#{question.id}]", option, false, class: "mr-2" %>
            <%= option %>
          </label>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="flex space-x-4 mt-4">
    <%= form.submit "Submit Quiz", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
