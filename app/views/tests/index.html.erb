<h1>Tests</h1>

<%= link_to 'New Test', new_test_path, class: 'btn btn-primary' %>

<table class="table-auto w-full">
  <thead>
    <tr>
      <th>Part</th>
      <th>Scheduled At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.part.name %></td>
        <td><%= test.scheduled_at %></td>
        <td><%= link_to 'Show', test_path(test), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_test_path(test), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Delete', test_path(test), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
