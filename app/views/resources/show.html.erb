<h1 class="text-2xl font-bold text-gray-900 mb-4"><%= @resource.name %></h1>

<p class="mb-4">
  <strong class="text-gray-700">Name:</strong>
  <span class="text-gray-900"><%= @resource.name %></span>
</p>

<div class="flex space-x-4 mb-4">
  <%= link_to 'Edit', edit_resource_path(@resource), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  <%= link_to 'Back', @resource.skill, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  <%= link_to 'Track Learned Parts', new_resource_part_path(@resource), class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
</div>

<h2 class="text-xl font-bold text-gray-900 mb-4">Learned parts</h2>

<ul class="list-disc pl-5">
  <% @resource.parts.each do |part| %>
    <li class="mb-2">
      <span class="text-gray-900"><%= part.name %></span>
      <%= link_to 'Edit', edit_part_path(part), class: 'text-blue-500 hover:text-blue-700 ml-2' %>
      <%= link_to 'Destroy', part_path(part), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'text-red-500 hover:text-red-700 ml-2' %>
      <%= button_to 'Create Quiz', create_quiz_part_path(part), method: :post, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    </li>
  <% end %>
</ul>

<% if @resource.parts.empty? %>
  <p class="text-gray-700">No parts available.</p>
<% end %>
