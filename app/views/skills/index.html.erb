<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold text-center my-6">Skills</h1>

  <div class="flex justify-end mb-4">
    <%= link_to 'New Skill', new_skill_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow-md rounded my-6">
      <thead>
        <tr class="bg-gray-800 text-white text-left">
          <th class="py-3 px-4 uppercase font-semibold text-sm">Name</th>
          <th class="py-3 px-4 uppercase font-semibold text-sm">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <% @skills.each do |skill| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-4"><%= skill.name %></td>
            <td class="py-3 px-4">
              <%= link_to 'Show', skill, class: 'text-blue-500 hover:text-blue-700 font-semibold' %> |
              <%= link_to 'Edit', edit_skill_path(skill), class: 'text-yellow-500 hover:text-yellow-700 font-semibold' %> |
              <%= link_to 'Destroy', skill, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'text-red-500 hover:text-red-700 font-semibold' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
