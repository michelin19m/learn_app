<h1>Learned parts</h1>

<%= link_to 'New Part', new_part_path, class: 'btn btn-primary' %>

<table class="table-auto w-full">
  <thead>
    <tr>
      <th>Name</th>
      <th>Resource</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.name %></td>
        <td><%= part.resource.name %></td>
        <td><%= link_to 'Show', part_path(part), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_part_path(part), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Delete', part_path(part), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
